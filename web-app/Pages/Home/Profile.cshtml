@model LoginFormViewModel

@{
    ViewData["title"] = "My Profile";
}

<div class="container">
  <div class="row mt-3">
    <div class="col-sm-10 col-12">
      <h1>Your account</h1>
    </div>
  </div>
  <div class="row">
    <div class="card">
      <div class="row g-0">
        <div class="col-4">
          <div class="card-body">
            <h5 class="card-title">@ViewData["title"]</h5>
            <p class="card-text"><small class="text-muted">This will show in events and public profile pages (coming soon)</small></p>
          </div>
        </div>
        <div class="col-8 pt-2">
          <label class="form-label"><small class="text-muted">Display name</small></label>
          <input asp-for="@Model.UserName" type="text" class="form-control" value="">
          <div class="d-flex justify-content-end mt-2">
            <button type="button" class="btn btn-secondary float-right">Save</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div>
    <div class="row mt-4">
      <div class="card">
        <div class="row g-0">
          <div class="col-4">
            <div class="card-body">
              <h5 class="card-title">New Email</h5>
              <p class="card-text"><small class="text-muted">Change your login info here, new emails need confirming</small></p>
            </div>
          </div>
          <div class="col-8 p-2">
            <label class="form-label"><small class="text-muted">Current email</small></label>
            <input type="text" class="form-control">
            <label class="form-label"><small class="text-muted">New email</small></label>
            <input type="text" class="form-control">
            <div class="d-flex justify-content-end mt-2">
              <button type="button" class="btn btn-secondary float-right">Save</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div>
    <div class="row mt-4">
      <div class="card">
        <div class="row g-0">
          <div class="col-4">
            <div class="card-body">
              <h5 class="card-title">New password</h5>
              <p class="card-text"><small class="text-muted">Enter a new password to change your login information</small></p>
            </div>
          </div>
          <div class="col-8 p-2">
            <label class="form-label" asp-for="@Model.Password"><small class="text-muted">Current password</small></label>
            <input type="password" class="form-control" value="">
            <label class="form-label"><small class="text-muted">New password</small></label>
            <input type="password" class="form-control">
            <label class="form-label"><small class="text-muted">Confirm new password</small></label>
            <input type="password" class="form-control">
            <div class="d-flex justify-content-end mt-2">
              <button type="button" class="btn btn-secondary float-right">Save</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
