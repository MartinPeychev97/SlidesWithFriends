@using DAL.EntityModels.User
@inject SignInManager<SlidesUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="navbar-nav ms-auto p-4 p-lg-0">
        <a asp-page="/presentations/index" class="nav-item nav-link">My Decks</a>
        <a asp-controller="Home" asp-action="Profile" class="nav-item nav-link">Profile</a>
        @*Log out button is in profile page. Adding then here to test. Remove when implemented in profile.*@
        <a asp-controller="User" asp-action="Logout" class="nav-item nav-link">Log out</a>
    </div>
    <a asp-controller="User" asp-action="Subscription" class="btn btn-primary btn-outline-dark py-4 px-lg-5 d-none d-lg-block"><span style="font-size:larger">Upgrade</span></a>
}
else
{
    <div class="navbar-nav ms-auto p-4 p-lg-0">
        <a asp-controller="User" asp-action="Login" class="nav-item nav-link">Log In</a>
    </div>
    <a asp-controller="User" asp-action="Register" class="btn btn-primary btn-outline-dark py-4 px-lg-5 d-none d-lg-block"><span style="font-size:larger">Sign up →</span></a>

}