@model LoginFormViewModel

@{
    ViewData["Title"] = "Log in";
}

<br />
<h1 class="text-lg-center">@ViewData["Title"]</h1>
<br />

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="login" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.UserName">Username</label>
                <input asp-for="@Model.UserName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password" class="form-label"></label>
                <input asp-for="@Model.Password" type="password" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                <button a asp-controller="GoogleAuth" asp-action="GoogleLogin" type="submit" class="btn btn-primary"><svg aria-hidden="true" class="native svg-icon iconGoogle" width="18" height="18" viewBox="0 0 18 18"><path d="M16.51 8H8.98v3h4.3c-.18 1-.74 1.48-1.6 2.04v2.01h2.6a7.8 7.8 0 0 0 2.38-5.88c0-.57-.05-.66-.15-1.18Z" fill="#EA4335"></path><path d="M8.98 17c2.16 0 3.97-.72 5.3-1.94l-2.6-2a4.8 4.8 0 0 1-7.18-2.54H1.83v2.07A8 8 0 0 0 8.98 17Z" fill="#EA4335"></path><path d="M4.5 10.52a4.8 4.8 0 0 1 0-3.04V5.41H1.83a8 8 0 0 0 0 7.18l2.67-2.07Z" fill="#EA4335"></path><path d="M8.98 4.18c1.17 0 2.23.4 3.06 1.2l2.3-2.3A8 8 0 0 0 1.83 5.4L4.5 7.49a4.77 4.77 0 0 1 4.48-3.3Z" fill="#EA4335"></path></svg> Sign up using Google </button>
            </div>
        </form>
    </div>
</div>